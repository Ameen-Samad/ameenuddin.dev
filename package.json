{
  "name": "ameenuddin.dev",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run build && concurrently -n \"MAIN,TRANS,TTS\" -c \"cyan,green,magenta\" \"bun run dev:main\" \"bun run dev:transcription\" \"bun run dev:tts\"",
    "dev:app": "vite dev --port 3000",
    "dev:worker": "bun run build && bunx wrangler dev --config dist/server/wrangler.json",
    "dev:transcription": "wrangler dev --config workers/wrangler-transcription.toml --port 8787 --persist-to .wrangler/state/transcription",
    "dev:tts": "wrangler dev --config workers/wrangler-tts.toml --port 8788 --persist-to .wrangler/state/tts",
    "prebuild": "bun install --frozen-lockfile",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' vite build",
    "postbuild": "node scripts/merge-wrangler-routes.js && node scripts/clean-wrangler-config.js",
    "test": "vitest run",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "deploy": "bun run build && bunx wrangler deploy --config dist/server/wrangler.json",
    "deploy:ci": "bun run build && bunx wrangler deploy --config dist/server/wrangler.json",
    "deploy:transcription": "bunx wrangler deploy --config workers/wrangler-transcription.toml",
    "deploy:tts": "bunx wrangler deploy --config workers/wrangler-tts.toml",
    "deploy:websockets": "bun run deploy:transcription && bun run deploy:tts",
    "deploy:all": "bun run deploy:websockets && bun run deploy",
    "preview": "bun run build && vite preview",
    "cf-typegen": "bunx wrangler types",
    "dev:main": "wrangler dev --config dist/server/wrangler.json --port 3000 --persist-to .wrangler/state/main",
    "dev:quick": "concurrently -n \"MAIN,WS-TRANS,WS-TTS\" -c \"cyan,green,magenta\" \"bun run dev:main\" \"bun run dev:transcription\" \"bun run dev:tts\"",
    "build:watch": "NODE_OPTIONS=\"--max-old-space-size=8192\" vite build --watch",
    "dev:build": "bun run build && bun run dev:quick",
    "dev:watch": "concurrently -n \"BUILD,MAIN,TRANS,TTS\" -c \"yellow,cyan,green,magenta\" \"bun run build:watch\" \"bun run dev:main\" \"bun run dev:transcription\" \"bun run dev:tts\"",
    "dev:concurrently": "bun build && concurrently -n \"MAIN,WS-TRANS,WS-TTS\" -c \"cyan,green,magenta\" \"bun dev:main\" \"bun dev:transcription\" \"bun dev:tts\""
  },
  "dependencies": {
    "@cloudflare/vite-plugin": "^1.13.8",
    "@faker-js/faker": "^10.0.0",
    "@mantine/core": "^8.3.13",
    "@mantine/hooks": "^8.3.13",
    "@mantine/notifications": "^8.3.13",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@t3-oss/env-core": "^0.13.8",
    "@tabler/icons-react": "^3.36.1",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/ai": "latest",
    "@tanstack/ai-client": "latest",
    "@tanstack/ai-openai": "latest",
    "@tanstack/ai-react": "latest",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/pacer": "^0.17.3",
    "@tanstack/react-form": "^1.0.0",
    "@tanstack/react-pacer": "^0.19.3",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tanstack/react-router": "^1.154.1",
    "@tanstack/react-router-ssr-query": "^1.154.1",
    "@tanstack/react-start": "^1.154.1",
    "@tanstack/react-store": "^0.8.0",
    "@tanstack/react-table": "^8.21.2",
    "@tanstack/react-virtual": "^3.13.18",
    "@tanstack/router-plugin": "^1.154.1",
    "@tanstack/store": "latest",
    "@trpc/client": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "@trpc/tanstack-react-query": "^11.4.3",
    "@types/react-pdf": "^7.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "highlight.js": "^11.11.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.561.0",
    "marked": "^15.0.8",
    "motion": "^12.28.1",
    "octokit": "^5.0.5",
    "phaser": "^3.90.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "streamdown": "^1.6.5",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.182.0",
    "tw-animate-css": "^1.3.6",
    "vite-tsconfig-paths": "^6.0.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@content-collections/core": "^0.13.1",
    "@content-collections/vite": "^0.2.8",
    "@tanstack/devtools-event-client": "^0.4.0",
    "@tanstack/devtools-vite": "^0.3.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "jsdom": "^27.0.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0",
    "wrangler": "^4.59.3"
  }
}