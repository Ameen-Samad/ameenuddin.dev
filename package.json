{
  "name": "ameenuddin.dev",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3000",
    "dev:worker": "npm run build && wrangler dev --config dist/server/wrangler.json",
    "dev:transcription": "wrangler dev --config workers/wrangler-transcription.toml",
    "dev:tts": "wrangler dev --config workers/wrangler-tts.toml",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' vite build",
    "test": "vitest run",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "deploy": "npm run build && wrangler deploy --config dist/server/wrangler.json",
    "deploy:transcription": "wrangler deploy --config workers/wrangler-transcription.toml",
    "deploy:tts": "wrangler deploy --config workers/wrangler-tts.toml",
    "deploy:websockets": "npm run deploy:transcription && npm run deploy:tts",
    "deploy:all": "npm run deploy && npm run deploy:websockets",
    "preview": "npm run build && vite preview",
    "cf-typegen": "wrangler types"
  },
